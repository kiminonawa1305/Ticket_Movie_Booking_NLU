                                    android:layout_height="wrap_content"
                                    android:text="Lớp: DH21HTDTB"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="10dp"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
