<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.GreetingActivity">

    <ImageView
        android:id="@+id/image_view_greeting_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_hcmuaf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:id="@+id/text_view_greeting"
        android:layout_width="380dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_view_greeting_logo"
        app:layout_constraintStart_toStartOf="@+id/image_view_greeting_logo"
        app:layout_constraintTop_toBottomOf="@+id/image_view_greeting_logo" />

    <ProgressBar
        android:id="@+id/progress_bar_greeting"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_greeting"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/text_view_greeting"
        app:layout_constraintTop_toBottomOf="@+id/text_view_greeting" />
</androidx.constraintlayout.widget.ConstraintLayout>