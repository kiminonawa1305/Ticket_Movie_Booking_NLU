<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/bg_dialog"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frame_layout_progress_bar_loading"
        android:layout_width="@dimen/size_process_bar_loading"
        android:layout_height="@dimen/size_process_bar_loading">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1px"
            android:indeterminateTint="@color/purple"
            android:pointerIcon="wait" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

    </FrameLayout>

    <TextView
        android:id="@+id/text_view_title_progress_loading"
        android:layout_width="@dimen/size_process_bar_loading"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_layout_progress_bar_loading"
        android:text=""
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>