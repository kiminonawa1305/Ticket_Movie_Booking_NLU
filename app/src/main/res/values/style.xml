<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_sign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_button_sign</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:background">@drawable/bg_button_sign</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="edt_input_info_sign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input_info_sign</item>
        <item name="android:paddingHorizontal">25dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:color">@color/white</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="notify_other_option_sign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/text_color_hint</item>
    </style>

    <style name="change_page_sign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="image_movie">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
<!--        <item name="colorControlNormal">@color/lightGrey</item>-->
        <item name="colorControlActivated">@color/red</item>
    </style>
</resources>