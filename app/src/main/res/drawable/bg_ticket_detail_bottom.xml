<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_secondary" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item
                android:gravity="top|left"
                android:left="-25dp"
                android:top="-26dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black" />
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>

            <item
                android:gravity="right|top"
                android:right="-25dp"
                android:top="-26dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black" />
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>

            <item
                android:gravity="bottom|left"
                android:left="-25dp"
                android:bottom="-25dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black" />
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>

            <item
                android:gravity="bottom|right"
                android:right="-25dp"
                android:bottom="-25dp">
                <shape android:shape="oval">
                    <solid android:color="@color/black" />
                    <size
                        android:width="50dp"
                        android:height="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>